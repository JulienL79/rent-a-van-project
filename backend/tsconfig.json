{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2021", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "@rent-a-van/shared/*": ["../shared/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "allowJs": true
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "drizzle.config.ts"]
}
