{
  "scripts": {
    "prepare": "husky install",
    "dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "lint-staged": {
    "*.{ts,tsx,js,yml}": [
      "prettier --write"
    ],
    "ignore": [
      "**/dist/**",
      "**/build/**",
      "**/node_modules/**",
      "**/package*.json"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ]
}
